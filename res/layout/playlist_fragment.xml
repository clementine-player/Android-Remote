<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical" >

   <RelativeLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:background="@drawable/actionbar_2nd_bg" >
        
        <Space
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />

        <Spinner
            android:id="@+id/playlist_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true" />


    </RelativeLayout>
    
    <ListView android:id="@+id/songs"
					    android:layout_margin="13dp"
              android:background="@drawable/white_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"/>
    
    <RelativeLayout 
       android:id="@+id/playlist_empty"
       android:visibility="gone"
       android:layout_margin="13dp"
       android:gravity="center_vertical|center_horizontal"
       android:background="@drawable/white_background"
       android:layout_width="fill_parent"
       android:layout_height="fill_parent">
       
       <TextView
           android:id="@+id/playlist_empty_txt"
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           android:gravity="center_horizontal"
           android:text="@string/playlist_empty"
           android:textColor="#000000"
           android:layout_marginBottom="50dp"
           android:textSize="20sp" />
       
       <ImageView
           android:id="@+id/playlist_empty_icon"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_above="@id/playlist_empty_txt"
           android:alpha="0.25"
           android:scaleType="fitCenter"
           android:src="@drawable/icon_large" />

   
   </RelativeLayout>
</LinearLayout>