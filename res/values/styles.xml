    </style>
    <style name="WhiteBackgroundBorder">
        <item name="android:background">@drawable/white_background_border</item>
        <item name="android:windowBackground">@null</item>
    </style>
    <style name="Dialog_Transparent" parent="@android:style/Theme.Dialog">
      <item name="android:windowBackground">@android:color/transparent</item>
      <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="ImgCoverWhiteBorder" >
        <item name="android:background">@drawable/img_cover_bg</item>
    </style>
    <style name="PreferencesTheme" parent="@android:style/Theme.Light.NoTitleBar">
